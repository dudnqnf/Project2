body{
	margin:0px;
}
#headerContainer{
	width:100%;
	height:54px;
	text-align: center;
	background-color:#ffffff;
}
#titleContainer{
	position:absolute;
	width:100%;
	text-align:center;
	font-size: 15px;
	color: #008ae8;
	font-family: NanumSquareOTFB;
	line-height: 54px;
	user-select:none;
}
.topButtonContainer{
	position:absolute;
}
.topButtonImage{
	width:30px;
	height:30px;
}
#buttonBackContainer{
	top:13px;
	left:5%;
}
#buttonLikeContainer{
	top:13px;
	right:17%;
}
#buttonShareContainer{
	top:13px;
	right:5%;
}
#mapTitle{
	position:fixed;
	bottom:0px;
	height:60px;
	width:100vw;
	font-family: 'NanumSquareOTFR';
}
#mapTitle #locationText{
	font-size: 3.24vw;
	opacity: 0.54;
}
#mapTitle #nameText {
	font-size: 4.68vw;
	opacity: 0.87;
}
#mapTitle #locationContainer {
	padding-top: 7px;
	padding-left: 15px;
}
#mapTitle #nameContainer {
	padding-top: 2px;
	padding-left: 15px;
}

#albumButtonContainer{
	position:absolute;
	bottom:30px;
	right:20px;
	z-index:900;
	display:inline-block;
}
#albumButtonImage{
	width:70px;
	height: 70px;
}
#swiper_wrapper{
	display:none;
	position:absolute;
	top:0px;
	left:0px;
	z-index:2000;
	width:100vw;
	height:100vh;
}
#swiper_wrapper *{
	z-index:2000;
}
.swiper-container{
	width:100vmin;
	height:100vmin;
}
.swiper-slide {
	text-align: center;
	font-size: 18px;
	background: #fff;
	/* Center slide text vertically */
	display: -webkit-box;
	display: -ms-flexbox;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-ms-flex-pack: center;
	-webkit-justify-content: center;
	justify-content: center;
	-webkit-box-align: center;
	-ms-flex-align: center;
	-webkit-align-items: center;
	align-items: center;
}
.pictureUnit{
	width:100vmin;
	height:100vmin;
}
#close_button_container{
	position:absolute;
	top:3%;
	right:6%;
	width:20px;
	height:20px;
}
#close_button{
	width:100%;
}
#blackout{
	display:none;
	position:absolute;
	top:0px;
	left:0px;
	z-index:1000;
	width:100%;
	height:100%;
	background-color:#000000;
	opacity:0.34;
}
#contentContainer{
	padding-top:54px;
}
#content{
	width:100%;
}
.toptracer{
	position:fixed;
	top:0px;
}
#linkButtonContainer{
	background: #008ae8;
	color: #fff;
	font-size: 18px;
	font-weight: bold;
	text-align: center;
	width: 100%;
	height: 60px;
	line-height: 60px;
	margin-top: 3px;
	margin-bottom: 3px;
}