body{
	margin:0px;
}
.line{
	width:100vw;
	height:1.7px;
	background-color:#008ae8;
}
#picture_wrapper{
	width:100vw;
	height:61.8vw;
}
#picture_top{
	position:absolute;
	top:0px;
	left:0px;
	width:100vw;
	height:61.8vw;
}
.top_button{
	position:absolute;
	top:10px;
	width:30px;
	height:30px;
}
#back{
	left:10px;
}
#zzim{
	right:50px;
}
#share{
	right:10px;
}

#title_container {
	font-size: 7vw;
	padding-left: 20px;
	padding-top: 10px;
	padding-bottom: 10px;
}
.subtitle_container {
	height: 50px;
	display: table-cell;
	vertical-align: bottom;
	font-size:4vw;
	padding-left: 20px;
	padding-bottom: 10px;
}
.info_img{
	width:6vw;
	height:6vw;
}
#info_wrapper #info_table{
	padding-right: 20px;
	padding-top: 5px;
	padding-bottom: 5px;
}
#info_wrapper #info_table td{
	height: 40px;
}
#info_wrapper #info_table .td_img{
	width:12%;
	text-align: right;
}
#info_wrapper #info_table .td_title{
	color: #008ae8;
	width: 25%;
	padding-left: 5px;
	font-size: 4vw;
	font-weight: bold;
}

#info_wrapper #info_table .info_text{
	width: 63%;
	font-size: 4vw;
}

#intro_container {
	padding-left: 30px;
	padding-right: 30px;
	padding-bottom: 10px;
	padding-top: 10px;
	font-size: 3.6vw;
	height: 50px;
	opacity: 0.87;
}
.album_header{
	height: 50px;
	display: table-cell;
	vertical-align: bottom;
	font-size:4vw;
	padding-left: 20px;
	padding-bottom: 10px;
}
.photo_container{
	width:100%;
	text-align: center;
	padding-top: 10px;
}
.photo{
	width:94vw;
}
#view_detail_button_container{
	width:100vw;
	text-align:center;
}
#view_detail_button{
	padding-top:30px;
	padding-bottom:30px;
	width:96.3%;
}


#facilityResultContentsWrapper .facilityResultImageContainer {
	height: 85%;
}

